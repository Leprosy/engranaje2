<?php
class Autoloader {
    public static function loadClass($className) {
        $auxpath  = str_replace('_', '/', $className);
        $libPath =  ENG_LIB_PATH . $auxpath . '.php';
        $modPath =  ENG_MOD_PATH . $auxpath . '.php';

        if (file_exists($libPath)) {
            include($libPath);
        } else if (file_exists($modPath)) {
            include($modPath);
        }
    }
}
